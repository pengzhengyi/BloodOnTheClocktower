{
    "name": "blood-on-the-clocktower",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "nuxt",
        "build": "nuxt build",
        "cloc": "cloc $(git ls-files)",
        "start": "nuxt start",
        "generate": "nuxt generate",
        "lint:js": "eslint --ext \".js,.ts,.vue\" --ignore-path .gitignore .",
        "lint:style": "stylelint \"**/*.{css,scss,sass,html,vue}\" --ignore-path .gitignore",
        "lint:prettier": "prettier --check .",
        "lint": "yarn lint:js && yarn lint:style && yarn lint:prettier",
        "lintfix": "yarn-audit-fix && prettier --write --list-different . && yarn lint:js --fix && yarn lint:style --fix",
        "prepare": "husky install",
        "test": "jest",
        "test:clearcache": "yarn test --clearCache",
        "test:log": "yarn test --silent=false --collectCoverage=false --verbose=false",
        "test:dev": "yarn test --maxWorkers=50% --verbose",
        "test:ci": "yarn test --runInBand",
        "test:profile": "ndb --prof yarn test:ci --verbose --collectCoverage=false",
        "deps:check": "madge --circular .",
        "deps:image": "madge --image coverage/dependencies.svg  ."
    },
    "lint-staged": {
        "*.{js,ts,vue}": "eslint --cache",
        "*.{css,scss,sass,html,vue}": "stylelint",
        "*.**": "prettier --check --ignore-unknown"
    },
    "dependencies": {
        "@abraham/reflection": "^0.11.0",
        "@nuxt/content": "^1.15.1",
        "@nuxtjs/axios": "^5.13.6",
        "@nuxtjs/composition-api": "^0.32.0",
        "@nuxtjs/dayjs": "^1.4.1",
        "@nuxtjs/pwa": "^3.3.5",
        "@peculiar/webcrypto": "^1.4.1",
        "@pinia/nuxt": "^0.1.9",
        "bootstrap": "^4.6.1",
        "bootstrap-vue": "^2.21.2",
        "class-transformer": "^0.5.1",
        "core-js": "^3.19.3",
        "eslint-plugin-unused-imports": "^2.0.0",
        "inversify": "^6.0.1",
        "js-sdsl": "^4.2.0",
        "nuxt": "^2.15.8",
        "pinia": "^2.0.14",
        "reflect-metadata": "^0.1.13",
        "stacktrace-js": "^2.0.2",
        "typescript": "^4.7.4",
        "uuid": "^8.3.2",
        "vue": "^2.6.14",
        "vue-server-renderer": "^2.6.14",
        "vue-template-compiler": "^2.6.14",
        "webpack": "^5.73.0",
        "yup": "^1.0.0"
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.16.3",
        "@commitlint/cli": "^17.0.3",
        "@commitlint/config-conventional": "^17.0.3",
        "@faker-js/faker": "^7.3.0",
        "@nuxt/types": "^2.15.8",
        "@nuxt/typescript-build": "^2.1.0",
        "@nuxtjs/eslint-config-typescript": "^10.0.0",
        "@nuxtjs/eslint-module": "^3.0.2",
        "@nuxtjs/stylelint-module": "^4.1.0",
        "@types/jest": "^28.1.4",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.50.0",
        "@typescript-eslint/parser": "^5.50.0",
        "@vue/test-utils": "^1.3.0",
        "babel-core": "7.0.0-bridge.0",
        "babel-jest": "^28.1.1",
        "eslint": "^8.4.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-nuxt": "^3.1.0",
        "eslint-plugin-vue": "^9.1.1",
        "husky": "^8.0.1",
        "jest": "^27.4.4",
        "jest-extended": "^3.0.1",
        "jest-mock-extended": "^2.0.6",
        "lint-staged": "^13.0.3",
        "madge": "^6.0.0",
        "ndb": "^1.1.5",
        "postcss-html": "^1.3.0",
        "prettier": "^2.5.1",
        "stylelint": "^14.1.0",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-recommended-vue": "^1.1.0",
        "stylelint-config-standard": "^26.0.0",
        "ts-jest": "^27.1.1",
        "vue-jest": "^3.0.4",
        "yarn-audit-fix": "^9.3.2"
    }
}
